<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" tools:showIn="@layout/activity_2"
    tools:context="lab2.teamprofilemanager.Activity2">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="235dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/teamid00"
                android:background="@drawable/koala_thumb"
                android:layout_row="0"
                android:layout_column="0"
                android:onClick="SetTeamIcon"
                android:clickable="true" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/teamid01"
                android:background="@drawable/ic_logo_01"
                android:layout_row="0"
                android:layout_column="1"
                android:onClick="SetTeamIcon"
                android:clickable="true" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/teamid03"
                android:background="@drawable/ic_logo_04"
                android:layout_row="0"
                android:layout_column="2"
                android:onClick="SetTeamIcon"
                android:clickable="true" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/teamid04"
                android:background="@drawable/koala_thumb"
                android:layout_row="1"
                android:layout_column="0"
                android:onClick="SetTeamIcon"
                android:clickable="true" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/teamid05"
                android:background="@drawable/koala_thumb"
                android:layout_row="1"
                android:layout_column="1"
                android:onClick="SetTeamIcon"
                android:clickable="true" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/teamid02"
                android:background="@drawable/koala_thumb"
                android:layout_row="1"
                android:layout_column="2"
                android:onClick="SetTeamIcon"
                android:clickable="true" />

        </GridLayout>

        <Button
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:text="Load From Phone"
            android:id="@+id/button" />

        <TextView
            android:layout_width="333dp"
            android:layout_height="wrap_content"
            android:text="Please Select Avatar"
            android:id="@+id/textView4" />

    </LinearLayout>
</RelativeLayout>
